<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nbempire.android.magicannotator"
          android:versionCode="15"
          android:versionName="1.6">

    <uses-sdk
            android:minSdkVersion="7"
            android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--
	    Se definen características principales de la aplicación:
		    android:icon: Es el icono que se visualizará en el launcher de Android. Debe estar en los recursos: @drawable en las 3 calidades que propone Android.
				low quality (ldpi): tamaño, 36x36 px; resolución, 96 ppp; profundidad en bits, 32.
				medium quality (mdpi): tamaño, 48x48 px; resolución, 96 ppp; profundidad en bits, 32.
				high quality (hdpi): tamaño, 72x72 px; resolución, 71 ppp; profundidad en bits, 32.

    -->
    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".component.activity.ChooseAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.AboutActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.ChoosePlayersActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.ViewTeamsActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.ChanchoAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.TrucoAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.TuteAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.GenericAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name=".component.activity.MarketAnnotatorActivity"
                android:label="@string/app_name_gui">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>

</manifest>